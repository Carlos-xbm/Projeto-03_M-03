  "components": {
    "schemas": {
      "Paletas": {
        "type": "object",
        "properties": {
          "sabor": {
            "type": "string"
          },
          "descricao": {
            "type": "string"
          },
          "foto": {
            "type": "string"
          },
          "preco": {
            "type": "number"
          }
        }
      }
    }
  }
